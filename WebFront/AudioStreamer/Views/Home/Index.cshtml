@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">API Test</h1>
    <p>Test AudioStreamer endpoints</p>
    <br />
    <div>
        <label for="vid">Get Audio Stream</label>
        <br />
        <input type="text" id="vid" name="vid" placeholder="Provide YT video ID..." />
        <br />
        <br />
        <button type="button" onclick="submitVideoId()">Test</button>
    </div>
    <br />
    <iframe name="output"></iframe>

    <script>
        var submitVideoId = function () {
            var value = $('vid').value;

            debugger;
            $.ajax({
                url: "localhost:8081/api/Stream/audio",
                method: 'GET',
                data: {
                    vid: value
                }
            });
        }
    </script>
</div>
